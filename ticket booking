More
 
no_of_tickets = int(input())
refreshment = input().lower()
coupon = input().lower()
ticket_type = input().lower()
if no_of_tickets < 5 or no_of_tickets > 40:
    print("Minimum of 5 and Maximum of 40 tickets")
elif ticket_type not in ['k', 'q']:
    print("Invalid Input")
else:
    ticket_price = 75 if ticket_type == 'k' else 150
    cost = no_of_tickets * ticket_price
    if no_of_tickets > 20:
        cost *= 0.90

    if coupon == 'y':
        cost *= 0.98

    if refreshment == 'y':
        cost += no_of_tickets * 50

    print(f"Ticket cost:{cost:.2f}")
